   "source": [
    "N,K = map(int,input().split())\n",
    "\n",
    "mod = 10**9+7\n",
    "ans = 0\n",
    "\n",
    "for i in range(K,N+2):\n",
    "    min = (0+i-1)*i//2\n",
    "    max = (N+N-i+1)*i//2\n",
    "    \n",
    "    ans += (max-min+1)%mod\n",
    "    \n",
    "print(ans%mod)"
   ]
  }
 ],
