    "B = list(map(int,input().split()))\n",
    "\n",
    "A = [0]*N\n",
    "A[0] = B[0]\n",
    "A[-1] = B[-1]\n",
    "\n",
    "for i in range(1,N-1):\n",
    "    A[i] = min(B[i-1],B[i])\n",
    "    \n",
    "print(sum(A))"
