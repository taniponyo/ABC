   "source": [
    "N = int(input())\n",
    "K = int(input())\n",
    "x = list(map(int,input().split()))\n",
    "\n",
    "ans = 0\n",
    "\n",
    "p1 = 0\n",
    "p2 = K\n",
    "\n",
    "for i in range(N):\n",
    "    if abs(x[i] - p1) < abs(x[i] - p2):\n",
    "        ans += abs(x[i] - p1)*2\n",
    "        p1 = x[i]\n",
    "    else:\n",
    "        ans += abs(x[i] - p2)*2\n",
    "        p2 = x[i]\n",
    "\n",
    "print(ans)"
   ]
  }
